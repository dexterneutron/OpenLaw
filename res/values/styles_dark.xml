<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppThemeDark" parent="AppBaseTheme">
        <item name="android:listViewStyle">@style/Widget.ListView</item>

        <item name="card_background">@color/dark_card_background</item>
        <item name="headline_small">@style/dark_headline_small</item>
    </style>

    <style name="dark_card_title" parent="@style/card_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_large_text</item>
        <item name="android:textColor">@color/card_title_text</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="dark_headline_small" parent="@style/dark_card_title">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>
</resources>