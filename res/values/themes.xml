<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- All customizations that are NOT specific to a particular API-level can go here. -->

    <!-- Light theme -->
    <!-- =========== -->
    <style name="AppTheme" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="android:listViewStyle">@style/Widget.ListView</item>

        <item name="android:colorBackground">@color/background</item>
        <item name="android:colorForeground">@color/card_background</item>
        <item name="android:windowBackground">@color/background</item>

        <item name="android:textColorPrimary">@color/card_text_color</item>
        <item name="android:textColorSecondary">@color/card_text_color</item>
        <item name="android:textColorTertiary">@color/card_text_color</item>

        <item name="card_text">@style/card_text</item>
        <item name="card_title">@style/card_title</item>
        <item name="card_title_bold">@style/card_title_bold</item>
        <item name="card_title_italic">@style/card_title_italic</item>

        <item name="headline_small">@style/headline_small</item>
        <item name="headline_selector">@drawable/headline_selector</item>
        <item name="headline_big_selector">@drawable/headline_big_selector</item>
        <item name="headline_biggest_selector">@drawable/headline_biggest_selector</item>

        <item name="laws_selector">@drawable/laws_selector</item>

        <!-- Icon -->
        <item name="ic_action_settings">@drawable/ic_action_settings</item>
    </style>


    <!-- Dark theme -->
    <!-- =========== -->
    <style name="AppThemeDark" parent="@style/Theme.Sherlock">
        <item name="android:listViewStyle">@style/Widget.ListView</item>

        <item name="android:colorBackground">@color/dark_background</item>
        <item name="android:colorForeground">@color/dark_card_background</item>
        <item name="android:windowBackground">@color/dark_background</item>

        <item name="android:textColorPrimary">@color/dark_card_text_color</item>
        <item name="android:textColorSecondary">@color/dark_card_text_color</item>
        <item name="android:textColorTertiary">@color/dark_card_text_color</item>

        <item name="card_text">@style/dark_card_text</item>
        <item name="card_title">@style/dark_card_title</item>
        <item name="card_title_bold">@style/dark_card_title_bold</item>
        <item name="card_title_italic">@style/dark_card_title_italic</item>

        <item name="headline_small">@style/dark_headline_small</item>
        <item name="headline_selector">@drawable/headline_selector_dark</item>
        <item name="headline_big_selector">@drawable/headline_big_selector_dark</item>
        <item name="headline_biggest_selector">@drawable/headline_biggest_selector_dark</item>

        <item name="laws_selector">@drawable/laws_selector_dark</item>

        <!-- Icon -->
        <item name="ic_action_settings">@drawable/ic_action_settings_inverse</item>
    </style>

</resources>