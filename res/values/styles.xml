<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="headline_small" parent="@style/card_title">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>


    <!-- Card Style -->
    <style name="card_text">
        <item name="android:textSize">@dimen/card_small_text</item>
        <item name="android:textColor">@color/card_text_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="card_title" parent="@card_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_large_text</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="card_title_bold" parent="@card_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_medium_text</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="card_title_italic" parent="@card_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_medium_text</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>


    <!-- Custom Style -->
    <style name="Widget" parent="android:Widget">
    </style>


    <style name="Widget.ListView">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dip</item>
    </style>

</resources>