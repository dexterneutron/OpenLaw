<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
<!--         <item name="android:background">#e2e2e2</item> -->
    </style>
    
    <style name="Headline1" parent="AppTheme">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Headline2" parent="AppTheme">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textSize">18sp</item>

    </style>
    
    <style name="Headline3" parent="AppTheme">
        <item name="android:paddingLeft">24dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="Headline4" parent="AppTheme">
        <item name="android:paddingLeft">28dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/card_light_text</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="Headline5" parent="AppTheme">
        <item name="android:paddingLeft">32dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/card_light_text</item>
    </style>
    
    <style name="Headline6" parent="AppTheme">
        <item name="android:paddingLeft">36dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/card_light_text</item>
        <item name="android:textStyle">italic</item>
    </style>



    <!-- Card Style -->

    <style name="CardText">
        <item name="android:textSize">@dimen/card_small_text</item>
        <item name="android:textColor">@color/card_text</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="CardLightText" parent="@style/CardText">
        <item name="android:textColor">@color/card_light_text</item>
    </style>

    <style name="CardTitle" parent="@style/CardText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_large_text</item>
        <item name="android:textColor">@color/card_title_text</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="CardTitleBold" parent="@style/CardText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_medium_text</item>
        <item name="android:textColor">@color/card_title_text</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="CardTitleItalic" parent="@style/CardText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_medium_text</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="StackTitle" parent="@style/CardText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/card_title_text</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">300dp</item>
    </style>

    <style name="Item.Top">
        <item name="android:background">#eeeeee</item>
    </style>

    <style name="Item.Sticky">
        <item name="android:layout_height">@dimen/sticky_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">#000000</item>
    </style>


    <!-- Custom Style -->


    <style name="CustomLightWithDarkAction" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="android:listViewStyle">@style/Widget.ListView</item>
    </style>

    <style name="Widget" parent="android:Widget">
    </style>


    <style name="Widget.ListView">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dip</item>
    </style>

</resources>