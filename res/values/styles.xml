<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- All customizations that are NOT specific to a particular API-level can go here. -->

    <!-- Light theme -->
    <!-- =========== -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:listViewStyle">@style/Widget.ListView</item>

        <item name="card_background">@color/card_background</item>
        <item name="headline_small">@style/headline_small</item>

    </style>

    <style name="card_title" parent="@card_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_large_text</item>
        <item name="android:textColor">@color/card_title_text</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="headline_small" parent="@style/card_title">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>


    <!-- Card Style -->
    <style name="card_text">
        <item name="android:textSize">@dimen/card_small_text</item>
        <item name="android:textColor">@color/card_text</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="CardLightText" parent="@card_text">
        <item name="android:textColor">@color/card_light_text</item>
    </style>


    <style name="CardTitleBold" parent="@card_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_medium_text</item>
        <item name="android:textColor">@color/card_title_text</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="CardTitleItalic" parent="@card_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_medium_text</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="StackTitle" parent="@card_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/card_title_text</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">300dp</item>
    </style>

    <style name="Item.Top">
        <item name="android:background">#eeeeee</item>
    </style>

    <style name="Item.Sticky">
        <item name="android:layout_height">@dimen/sticky_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">#000000</item>
    </style>


    <!-- Custom Style -->



    <style name="Widget" parent="android:Widget">
    </style>


    <style name="Widget.ListView">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dip</item>
    </style>

</resources>